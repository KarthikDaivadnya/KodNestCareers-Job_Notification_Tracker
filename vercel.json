{
  "rewrites": [
    { "source": "/",             "destination": "/dashboard.html"  },
    { "source": "/dashboard",    "destination": "/dashboard.html"  },
    { "source": "/saved",        "destination": "/saved.html"      },
    { "source": "/digest",       "destination": "/digest.html"     },
    { "source": "/settings",     "destination": "/settings.html"   },
    { "source": "/proof",        "destination": "/proof.html"      },
    { "source": "/design-system/:path*", "destination": "/design-system/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}
