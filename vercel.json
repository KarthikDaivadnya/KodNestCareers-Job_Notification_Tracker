{
  "rewrites": [
    { "source": "/", "destination": "/design-system/index.html" },
    { "source": "/(.*)", "destination": "/design-system/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}
